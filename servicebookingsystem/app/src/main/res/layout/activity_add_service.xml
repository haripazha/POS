<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f1"
    xmlns:card_View="http://schemas.android.com/apk/res-auto"
    tools:context=".provider_home_view.menu_service.button_add_service.add_service">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2980b9"
            android:gravity="left"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/back_button"
                android:layout_width="41dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                app:srcCompat="@drawable/back_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Add New Service"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            card_View:cardBackgroundColor="#ffffff"
            card_View:cardCornerRadius="2dp"
            card_View:cardElevation="@dimen/cardview_compat_inset_shadow">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/service_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:theme="@style/activity_registration_inputLayout"
                    app:errorEnabled="true">


                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusableInTouchMode="true"
                        android:hint="Your Service Name"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#9f9f9f" />

                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/service_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:theme="@style/activity_registration_inputLayout"
                    app:errorEnabled="true">


                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusableInTouchMode="true"
                        android:hint="Your Company Description"
                        android:inputType="textMultiLine"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:minLines="6"
                        android:maxLines="10"
                        android:gravity="top|left"
                        android:lines="8"
                        android:textColorHint="#9f9f9f"
                        android:scrollbars="vertical"
                        android:scrollbarStyle="insideInset"
                        android:overScrollMode="always"
                        />

                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/service_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:theme="@style/activity_registration_inputLayout"
                    app:errorEnabled="true">


                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:drawablePadding="20dp"
                        android:focusableInTouchMode="true"
                        android:hint="Your Service Rate"
                        android:inputType="numberDecimal"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#9f9f9f" />

                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What type of service does your company offer?"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="#4f4f4f"/>



                <Spinner
                    android:id="@+id/company_service"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:entries="@array/service_category"
                    android:background="@drawable/activity_register_spinner_design"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="25dp"
                    android:paddingRight="10dp" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    card_View:cardBackgroundColor="#ffffff"
                    card_View:cardCornerRadius="2dp"
                    card_View:cardElevation="@dimen/cardview_compat_inset_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Upload Photo of your service"
                            android:textColor="#5e5e5e"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/service_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/add_image_icon" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/add_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Service"
                    android:textColor="#FFF"
                    android:background="#2980b9"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"/>


            </LinearLayout>
        </ScrollView>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>