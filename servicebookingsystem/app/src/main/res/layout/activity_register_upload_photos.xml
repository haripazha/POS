<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_View="http://schemas.android.com/apk/res-auto"
    android:background="#ecf0f1"
    tools:context=".user_register_view.register_view_a.register_upload_photos">


    <LinearLayout
        android:id="@+id/register_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2980b9"
            android:gravity="left"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/back_button"
                android:layout_width="41dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="19dp"
                app:srcCompat="@drawable/back_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register - Step 2"
                android:textColor="#FFF"
                android:textSize="16dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    card_View:cardBackgroundColor="#ffffff"
                    card_View:cardCornerRadius="2dp"
                    card_View:cardElevation="@dimen/cardview_compat_inset_shadow">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Upload your face Photo:"
                        android:textColor="#5e5e5e"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/user_profile_pic"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/add_image_icon" />

                </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/valid_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    card_View:cardBackgroundColor="#ffffff"
                    card_View:cardCornerRadius="2dp"
                    card_View:cardElevation="@dimen/cardview_compat_inset_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Upload any 1 valid ID:"
                            android:textColor="#5e5e5e"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/user_valid_id"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/add_image_icon" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/company_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    card_View:cardBackgroundColor="#ffffff"
                    card_View:cardCornerRadius="2dp"
                    card_View:cardElevation="@dimen/cardview_compat_inset_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Company Details:"
                            android:textColor="#5e5e5e"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/company_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:theme="@style/activity_registration_inputLayout"
                            app:errorEnabled="true">


                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:drawablePadding="20dp"
                                android:focusableInTouchMode="true"
                                android:hint="Your Company Name"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#9f9f9f" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/company_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:theme="@style/activity_registration_inputLayout"
                            app:errorEnabled="true">


                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:clickable="true"
                                android:drawablePadding="20dp"
                                android:focusableInTouchMode="true"
                                android:hint="Your Company Description"
                                android:inputType="textMultiLine"
                                android:paddingLeft="10dp"
                                android:textColor="#000000"
                                android:minLines="6"
                                android:maxLines="10"
                                android:gravity="top|left"
                                android:lines="8"
                                android:textColorHint="#9f9f9f"
                                android:scrollbars="vertical"
                                android:scrollbarStyle="insideInset"
                                android:overScrollMode="always"
                                />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/number_of_employee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:theme="@style/activity_registration_inputLayout"
                            app:errorEnabled="true">


                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:drawablePadding="20dp"
                                android:focusableInTouchMode="true"
                                android:hint="Number of Employee"
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#9f9f9f" />

                        </android.support.design.widget.TextInputLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What type of service does your company offer?"
                            android:textSize="14dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textColor="#4f4f4f"/>



                        <Spinner
                            android:id="@+id/company_service"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:entries="@array/service_category"
                            android:background="@drawable/activity_register_spinner_design"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="25dp"
                            android:paddingRight="10dp" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/company_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:theme="@style/activity_registration_inputLayout"
                            app:errorEnabled="true">


                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:drawablePadding="20dp"
                                android:focusableInTouchMode="true"
                                android:hint="Company Address"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#9f9f9f" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/company_barangay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:theme="@style/activity_registration_inputLayout"
                            app:errorEnabled="true">


                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:drawablePadding="20dp"
                                android:focusableInTouchMode="true"
                                android:hint="Company barangay"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#9f9f9f" />

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Cities"
                            android:textSize="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textColor="#4f4f4f"/>


                        <Spinner
                            android:id="@+id/company_city"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="15dp"
                            android:entries="@array/philippines_region"
                            android:background="@drawable/activity_register_spinner_design"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    card_View:cardBackgroundColor="#ffffff"
                    card_View:cardCornerRadius="2dp"
                    card_View:cardElevation="@dimen/cardview_compat_inset_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Incase of lost password, Please enter your email to retrieve"
                            android:textColor="#5e5e5e"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:theme="@style/activity_registration_inputLayout"
                            app:errorEnabled="true">


                            <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:drawablePadding="20dp"
                                android:focusableInTouchMode="true"
                                android:hint="Your Email (example@email.com)"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#9f9f9f" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    card_View:cardBackgroundColor="#ffffff"
                    card_View:cardCornerRadius="2dp"
                    card_View:cardElevation="@dimen/cardview_compat_inset_shadow">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Note:"
                            android:textColor="#5e5e5e"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:text="You must upload your photo to verify your account." />

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="Submit"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:background="#27ae60"/>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>