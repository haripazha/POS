<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c3e50"
    tools:context=".user_login.user_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:fontFamily="cursive"
                android:gravity="center_horizontal|center_vertical"
                android:text="CAHERA"
                android:textColor="#d35400"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#c8c8c8"
                android:text="We provide fresh and quality food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:textColor="#FFF"
                android:text="No Account?" />

            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#FFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Register Here" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:background="#202c38"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Login"
                android:gravity="center_horizontal"
                android:textColor="#FFF"
                android:textSize="17dp"
                android:layout_marginTop="50dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:theme="@style/activity_login_inputLayout"
                app:errorEnabled="true">


                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:focusableInTouchMode="true"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#d35400"
                    android:textColorHint="#d35400" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:theme="@style/activity_login_inputLayout"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#d35400">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:drawablePadding="20dp"
                    android:focusableInTouchMode="true"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:textColor="#d35400"
                    android:textColorHint="#d35400" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="#e74c3c"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:text="Login" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>